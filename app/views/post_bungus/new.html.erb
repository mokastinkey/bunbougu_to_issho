<div class="new-post-box">
  <div class="post-bg">
    <div class="newpost-index">

    <p class="admin-comment">あなたの文房具を<br>紹介してください!</p>

    <div class="newpost">
      <%= form_with model:@post_bungu, local:true do |f| %>
        <p>文房具のキャッチフレーズ</p>
        <%= f.text_area :catchphrase, autofocus: true, size: "40X40" %>
        <p>画像</p>
        <%= f.attachment_field :bungu_images_images, multiple: true %>
        <p>商品名</p>
        <%= f.text_field :bungu_name %>
        <p>ジャンル</p>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" } %>
        <p>使い心地や良い点など</p>
        <%= f.text_area :thought %>
        <div id="rate-stars">
          <p>評価</p>
          <%= render 'post_bungus/star' %>
        </div>
        <p>メーカー</p>
        <% PostBungu.manufacturers_i18n.each do |value, manufacturer| %>
          <div>
            <label>
              <%= f.radio_button :manufacturer, value %>
              <%= manufacturer %>
            </label>
          </div>
        <% end %>
        <div class="other_manufacturer_text"><%= f.text_field :other_manufacturer %></div>
        <p>値段</p>
        <%= f.text_field :price %>
        <p>購入場所</p>
        <%= f.text_field :place %>
        <%= f.submit '投稿する' %>
      <% end %>
    </div>

    </div>
  </div>
</div>